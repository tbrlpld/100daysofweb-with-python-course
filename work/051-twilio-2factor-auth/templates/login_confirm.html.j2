{% extends "base.html.j2" %}

{% block title %}Confirm Log In{% endblock title%}

{% block content %}
  <h1>{{ self.title() }}</h1>
  {% if errors %}
    <ul>
    {% for error in errors.values() %}
      <li>{{ error }}</li>
    {% endfor %}
    </ul>
  {% endif %}
  <form action="" method="POST">
    <input type="text" name="code" placeholder="Code" required>
    <br>
    <input type="submit" value="Confirm Login">
  </form>
{% endblock content %}