{% extends "base.jinja2" %}
{% block header %}
  <h1>Login</h1>
{% endblock header %}
{% block content %}
  <div class="content">
    <div class="row">
      <div class="col-6">
        {% if message %}
          <div class="alert alert-warning" role="alert">
            {{ message }}
          </div>
        {% endif %}
        <form action="{{Â url }}" method="POST">
          <input type="hidden" name="next" value="{{ next_url }}">
          <div class="form-group">
            <input type="email" name="login" value="{{ login or '' }}" placeholder="email" class="form-control" required/>
          </div>
          <div class="form-group">
            <input type="password" name="password" placeholder="password" class="form-control" required/>
          </div>
          <div class="form-group">
            <input type="submit" name="form-submit" value="Login" class="btn btn-success"/>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock content %}