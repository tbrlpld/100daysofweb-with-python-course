<div metal:use-macro="load: base.pt">
  <div metal:fill-slot="content">
    <div class="content">
      <h1><span class="font-semi-bold">Bill Tracker</span></h1>
      <p class="lead">
        Welcome ${user.name}.
      </p>
      <p>
        Open Bills:
        <ol>
          <li tal:repeat="b user.open_bills">You still owe ${"${0:5.0f}".format(b.open)} for ${b.description}.</li>
        </ol>
      </p>
      <p>
        Payed Bills:
        <ol>
          <li tal:repeat="b user.paid_bills">You paid ${"${0:5.0f}".format(b.total)} for ${b.description}.</li>
        </ol>
      </p>
    </div>
  </div>
</div>
